// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// --- MODELO DE USUÁRIO (O CORAÇÃO DO SISTEMA) ---
model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?   // Foto de Perfil (Base64 ou URL)
  
  // Dados de Perfil & Onboarding
  course        String?   // Ex: "Computer Science"
  bio           String?   // Biografia curta
  age           Int?
  gender        String?
  torsoImage    String?   // Foto de corpo inteiro/torso para o Lounge
  role          String?   // "student", "researcher", etc.
  phone         String?   // "(00) 00000-0000"
  
  // Dados de Identidade & Crypto
  identityId    String?   // CPF, Matrícula, etc.
  idType        String?   // "wallet" ou "role_id"
  walletAddress String?   // Carteira Crypto
  
  // Dados Administrativos & KYC
  kycStatus     String    @default("pending")
  documents     Json?     // Metadados dos PDFs enviados
  institution   String?   // Instituição de ensino

  // Datas de controle
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // --- RELACIONAMENTOS ---
  accounts      Account[]
  sessions      Session[]
  
  // Relacionamento com o Feed
  posts         Post[]
  comments      Comment[]

  // Relacionamento com a Área de Trabalho (Lounge Memory)
  userSpaceData UserSpaceData?
}

// --- CONFIGURAÇÕES GLOBAIS DO SISTEMA (NOVO) ---
// Armazena dados únicos, como a mensagem diária da Zaeon no LoungeEarth
model SystemSetting {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique // Ex: "global_message"
  value     String   // O texto da mensagem
  updatedAt DateTime @updatedAt
}

// --- MEMÓRIA DO LOUNGE & SALAS ---
model UserSpaceData {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  
  // Conexão com o Usuário
  userId        String   @unique @db.ObjectId
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Dados Persistentes do Lounge
  schedule      Json?    // Array das aulas (JSON puro)
  chatHistory   Json?    // Histórico do Chat com a IA (Array de objetos)
  stickyNote    String?  // Texto do post-it amarelo
  activeProject Json?    // Projeto ativo no momento
  citations     Json?    // Citações geradas pelos agentes
  workContent   String?  // Conteúdo de trabalho salvo
  workTitle     String?  // Título do trabalho salvo

  updatedAt     DateTime @updatedAt
}

// --- MODELOS DE FEED (ATUALIZADO) ---
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  likes     String[] @default([]) // Array de IDs de usuários que deram like
  createdAt DateTime @default(now())

  // --- NOVO CAMPO: SALA/CATEGORIA ---
  // Define em qual feed este post aparece. 
  // Padrão: "lounge". Opções: "cyber", "bio", "quantic", "humanities"
  room      String   @default("lounge") 

  // Autor do Post
  user      String   // Snapshot do nome de exibição para performance
  userImage String?  // Snapshot da imagem de perfil para performance (NOVO)
  
  userId    String?  @db.ObjectId
  author    User?    @relation(fields: [userId], references: [id])

  comments  Comment[]
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  user      String   // Nome de exibição
  createdAt DateTime @default(now())

  // Relação com Post
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)

  // Relação com Usuário
  userId    String?  @db.ObjectId
  author    User?    @relation(fields: [userId], references: [id])
}

// --- MODELO DE NOTÍCIAS ---
model NewsPost {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  subtitle    String?
  content     String
  imageUrl    String?
  publishDate DateTime @default(now())
  status      String   @default("draft") // "draft" ou "published"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- MODELOS PADRÃO DO NEXTAUTH (Auth.js) ---
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}